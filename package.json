{
  "name": "easy-peasy-ebook",
  "version": "0.0.1",
  "description": "",
  "main": "index.js",
  "directories": {
    "doc": "docs"
  },
  "devDependencies": {
    "archiver": "^3.0.0",
    "cross-var": "^1.1.0",
    "epubchecker": "^1.1.2",
    "markdown-it": "^8.4.2",
    "pdf-puppeteer": "^1.1.4",
    "rimraf": "^2.6.2",
    "slugify": "^1.3.1"
  },
  "config": {
    "bookdata": "./docs/bookdata.json",
    "epubfiles": "./epub-originals/.",
    "builddir": "./epubdata"
  },
  "scripts": {
    "pdf": "cross-var node generate-pdf-file  $npm_package_config_bookdata $npm_package_config_builddir",
    "build": "yarn setup && yarn content && yarn package && yarn pdf && yarn test",
    "test": "cross-var node epubcheck",
    "package": "cross-var node generate-package $npm_package_config_builddir",
    "presetup": "cross-var rimraf $npm_package_config_builddir && mkdir $npm_package_config_builddir",
    "setup": "cross-var cp -r $npm_package_config_epubfiles $npm_package_config_builddir",
    "postsetup": "cross-var node generate-opf-file $npm_package_config_bookdata $npm_package_config_builddir",
    "precontent": "cross-var node generate-toc-file $npm_package_config_bookdata $npm_package_config_builddir",
    "content": "cross-var node generate-content-files $npm_package_config_bookdata $npm_package_config_builddir",
    "postcontent": "cross-var node generate-ncx-file $npm_package_config_bookdata $npm_package_config_builddir"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kjartanm/easy-peasy-ebook.git"
  },
  "author": "https://github.com/kjartanm",
  "license": "",
  "bugs": {
    "url": "https://github.com/kjartanm/easy-peasy-ebook/issues"
  },
  "homepage": "https://github.com/kjartanm/easy-peasy-ebook#readme",
  "dependencies": {}
}
